{
    "name": "sdlx/core",
    "type": "library",
    "description": "SDLX core package",
    "license": "MIT",
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-gettext": "*",
        "ext-json": "*",
        "datalinx/gettext-context": "^1.0",
        "datalinx/php-utils": "dev-master",
        "doctrine/dbal": "^3.4",
        "guzzlehttp/guzzle": "^7.4",
        "laravel/framework": "^9.24",
        "laravel/sanctum": "^3.0",
        "laravel/telescope": "^4.9",
        "laravel/tinker": "^2.7",
        "league/glide-laravel": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.20",
        "laravel/breeze": "^1.11",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^6.2",
        "orchestra/testbench": "^7.7",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "SDLX\\Core\\": "src/",
            "SDLX\\Core\\Database\\Factories\\": "database/factories/",
            "SDLX\\Core\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SDLX\\Core\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [],
            "providers": [
                "SDLX\\Core\\Providers\\CoreServiceProvider",
                "SDLX\\Core\\Providers\\AuthServiceProvider",
                "SDLX\\Core\\Providers\\EventServiceProvider",
                "SDLX\\Core\\Providers\\RouteServiceProvider",
                "SDLX\\Core\\Providers\\TelescopeServiceProvider"
            ]
        },
        "sdlx": {
            "type": "app"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/datalinx/php-utils"
        }
    ]
}
